{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C: GCC build COMPILE",
            "command": "make",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
		},
		{
            "type": "shell",
            "label": "C: GCC clean COMPILE",
            "command": "make",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}